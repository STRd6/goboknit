*
  box-sizing: border-box

html
  height: 100%

body
  margin: 0
  background-image: url(https://s3.amazonaws.com/addressable/gobo/gobo2.jpg)
  height: 100%

.fiber, .demand
  background-color: white
  border: 1px solid black
  display: inline-block
  width: 80px
  height: 100px
  padding: 4px
  position: relative

  .purchase
    position: absolute
    bottom: 4px
    right: 4px

.demand
  width: 120px

.cyborg
  background-color: white
  display: inline-block
  padding: 4px
  width: 200px
  height: 100px
  border: 1px solid black

  progress
    width: 100%

#player
  width: 100%
  height: 100%
  position: absolute
  top: 0
  bottom: 0
  right: 0
  left: 0
  display: none
